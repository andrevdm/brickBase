cabal-version:       2.2
name:                brickBedrock
version:             0.1.7.5
-- synopsis:
-- description:
homepage:            https://github.com/andrevdm/brickBedrock#readme
license:             NONE
license-file:        LICENSE
author:              andrevdm
maintainer:          info@andrevdm.co.za
copyright:           2021 Andre Van Der Merwe
category:            Web
build-type:          Simple
extra-source-files:  README.md


common common-options
  build-depends:
    base >=4.10.1.0 && <5
  default-language:
    Haskell2010

common common-ghc-options
  ghc-options: -Wall -Wincomplete-uni-patterns -Wincomplete-record-updates -Wimplicit-prelude -Wcompat -Wredundant-constraints -Wnoncanonical-monad-instances -Widentities -fhide-source-paths -Wpartial-fields -fhide-source-paths -freverse-errors -fwrite-ide-info -hiedir=.hie


library
  import:              common-options
  import:              common-ghc-options
  hs-source-dirs:      src
  exposed-modules:     BrickBedrock.Core
                     , BrickBedrock.Defaults
                     , BrickBedrock.Model
                     , BrickBedrock.Utils
                     , BrickBedrock.Formatting
                     , BrickBedrock.Demo.Demo
                     , BrickBedrock.Controls.ReadOnlyEdit
                     , BrickBedrock.Controls.ListGrid
  other-modules:       Paths_brickBedrock
  build-depends:       protolude
                     , aeson
                     , brick
                     , bytestring
                     , containers
                     , lens
                     , safe-exceptions
                     , scientific
                     , strip-ansi-escape
                     , stm
                     , stm-chans
                     , text
                     , text-zipper
                     , time
                     , unordered-containers
                     , uuid
                     , vector
                     , vty
  default-language:    Haskell2010

executable brickBedrock-exe
  import:              common-options
  import:              common-ghc-options
  hs-source-dirs:      app
  main-is:             Main.hs
  other-modules:       Paths_brickBedrock
  build-depends:       base
                     , brickBedrock
                     , protolude
                     , brick
                     , containers
                     , containers
                     , lens
                     , safe-exceptions
                     , stm
                     , stm-chans
                     , text
                     , time
                     , unordered-containers
                     , uuid
                     , vector
                     , vty

test-suite brickBedrock-test
  import:              common-options
  import:              common-ghc-options
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Tests.hs
  build-depends:       brickBedrock
                     , protolude
                     , text
                     , containers
                     , hedgehog
  other-modules:       DemoTests

source-repository head
  type:     git
  location: https://github.com/andrevdm/brickBedrock
